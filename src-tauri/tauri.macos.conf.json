{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.btjawa.bilitools",
  "app": {
    "windows": [
      {
        "minWidth": 960,
        "minHeight": 680,
        "title": "BiliTools",
        "label": "main",
        "width": 960,
        "height": 680,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "dragDropEnabled": false
      }
    ]
  },
  "bundle": {
    "targets": ["app", "dmg"],
    "externalBin": [
      "binaries/macos/aria2c",
      "binaries/macos/ffmpeg",
      "binaries/macos/DanmakuFactory"
    ],
    "resources": {
      "resources/COPYING.aria2c": "COPYING.aria2c",
      "resources/COPYING.LGPLv3.ffmpeg": "COPYING.LGPLv3.ffmpeg",
      "resources/LICENSE.DanmakuFactory": "LICENSE.DanmakuFactory",
      "resources/LICENSE.OpenSSL": "LICENSE.OpenSSL"
    },
    "macOS": {
      "entitlements": "./packages/macos/entitlements.plist",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      },
      "minimumSystemVersion": "11.0",
      "signingIdentity": "-"
    }
  }
}
