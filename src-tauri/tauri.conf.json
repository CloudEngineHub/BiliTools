{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BiliTools",
  "version": "1.4.0-6",
  "identifier": "com.btjawa.bilitools",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "enableGTKAppId": true,
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "minWidth": 960,
        "minHeight": 680,
        "title": "BiliTools",
        "label": "main",
        "width": 960,
        "height": 680,
        "transparent": true,
        "decorations": false,
        "backgroundColor": "#000",
        "dragDropEnabled": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "Copyright Â© 2025 btjawa",
    "createUpdaterArtifacts": true,
