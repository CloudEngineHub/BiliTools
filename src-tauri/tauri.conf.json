{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "BiliTools",
    "version": "1.0.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "os": {
        "all": true
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": true
      },
      "http": {
        "all": false,
        "request": true,
        "scope": [
          "https://*.bilibili.com/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.btjawa.bilitools",
      "icon": [
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/32x32.png",
        "icons/icon.icns",
        "icons/icon.ico",
        "icons/icon.png",
        "icons/Square107x107Logo.png",
        "icons/Square142x142Logo.png",
        "icons/Square150x150Logo.png",
        "icons/Square284x284Logo.png",
        "icons/Square30x30Logo.png",
        "icons/Square310x310Logo.png",
        "icons/Square44x44Logo.png",
        "icons/Square71x71Logo.png",
        "icons/Square89x89Logo.png",
        "icons/StoreLogo.png"
      ],
      "resources": [
        "ffmpeg"
      ],
      "windows": {
        "wix": {
          "language": "zh-CN"
        },
        "nsis": {
          "languages": [
            "SimpChinese",
            "English"
          ],
          "displayLanguageSelector": true
        }
      }
    },
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVFQTUzQTQ3NDY3RUZEMjgKUldRby9YNUdSenFsN3JJYklTL0g5RUd2QkhUWklqQUxydVZXdFA4c25ZazI0YjJIbTFFM0JiNjkK",
      "endpoints": [
        "https://gh.con.sh/https://github.com/btjawa/BiliTools/blob/master/install.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "minWidth": 1280,
        "minHeight": 720,
        "title": "BiliTools",
        "label": "main",
        "width": 1280,
        "height": 720
      }
    ]
  }
}