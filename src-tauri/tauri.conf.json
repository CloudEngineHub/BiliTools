{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "BiliTools",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "open": true
      },
      "http": {
        "all": false,
        "request": true,
        "scope": ["https://*.bilibili.com/*"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.btjawa.bilitools",
      "icon": [
        "icons/icon.png",
        "icons/icon.ico"
      ],
      "resources": [
        "ffmpeg"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "minWidth": 1280,
        "minHeight": 720,
        "maxWidth": 1280,
        "maxHeight": 720,
        "title": "BiliTools",
        "label": "main",
        "width": 1280,
        "height": 720
      }
    ]
  }
}
