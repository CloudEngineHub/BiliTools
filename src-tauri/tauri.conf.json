{
  "productName": "BiliTools",
  "version": "1.4.0-5",
  "identifier": "com.btjawa.bilitools",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "Copyright Â© 2025 btjawa",
    "targets": "all",
    "shortDescription": "A cross-platform bilibili toolbox",
    "license": "GPL-3.0-or-later",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "createUpdaterArtifacts": true,
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": [
          "SimpChinese",
          "TradChinese",
          "English",
          "Japanese"
        ],
        "displayLanguageSelector": true
      }
    },
    "macOS": {
      "signingIdentity": "-"
    },
    "resources": {
      "resources/COPYING.aria2c": "COPYING.aria2c",
      "resources/COPYING.LGPLv3.ffmpeg": "COPYING.LGPLv3.ffmpeg",
      "resources/LICENSE.DanmakuFactory": "LICENSE.DanmakuFactory",
      "resources/LICENSE.OpenSSL": "LICENSE.OpenSSL"
    },
    "externalBin": [
      "binaries/aria2c",
      "binaries/ffmpeg",
      "binaries/DanmakuFactory"
    ]
  },
  "plugins": {
    "updater": {
