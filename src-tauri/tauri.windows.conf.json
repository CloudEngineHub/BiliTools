{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.btjawa.bilitools",
  "app": {
    "windows": [
      {
        "minWidth": 960,
        "minHeight": 680,
        "title": "BiliTools",
        "label": "main",
        "width": 960,
        "height": 680,
        "decorations": false,
        "transparent": true,
        "dragDropEnabled": false
      }
    ]
  },
  "bundle": {
    "targets": "nsis",
    "externalBin": [
      "binaries/windows/aria2c",
      "binaries/windows/ffmpeg",
      "binaries/windows/DanmakuFactory"
    ],
    "resources": {
      "resources/COPYING.aria2c": "COPYING.aria2c",
      "resources/COPYING.LGPLv3.ffmpeg": "COPYING.LGPLv3.ffmpeg",
      "resources/LICENSE.DanmakuFactory": "LICENSE.DanmakuFactory",
      "resources/LICENSE.OpenSSL": "LICENSE.OpenSSL"
    },
    "windows": {
      "certificateThumbprint": null,
      "nsis": {
        "languages": ["SimpChinese", "TradChinese", "English", "Japanese"],
        "displayLanguageSelector": true
      }
    }
  }
}
